<%layout("Layouts/boilerplate")%>
<h3 class="listing-heading">Edit your Listing</h3>
<div class="row">
  <div class="col-8 offset-2">
    <form
      novalidate
      class="needs-validation"
      action="/listings/<%=list._id%>?_method=PUT"
      method="POST"
    >
      <div class="input-div">
        <label for="title" class="form-label">Title</label>
        <input
          name="listings[title]"
          type="text"
          value="<%=list.title%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>

      <div class="input-div">
        <label for="description" class="form-label">Description</label>
        <textarea required name="listings[description]" class="form-control">
<%=list.description%></textarea
        >
        <div class="valid-feedback">Description looks fine!</div>
        <div class="invalid-feedback">Description cannot be empty.</div>
      </div>

      <div class="input-div">
        <label for="image" class="form-label">Image Link</label>
        <input
          type="url"
          name="listings[image]"
          value="<%=list.image%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Image URL looks valid.</div>
        <div class="invalid-feedback">Please enter a valid image URL.</div>
      </div>

      <div class="row">
        <div class="col-md-4 input-div">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listings[price]"
            value="<%=list.price%>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Price looks correct.</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="col-md-8 input-div">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            value="<%=list.country%>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Country name looks good.</div>
          <div class="invalid-feedback">Please enter a valid country name.</div>
        </div>
      </div>

      <div class="input-div">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listings[location]"
          value="<%=list.location%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Location looks good.</div>
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>

      <button class="btn btn-danger">Update</button>
    </form>
  </div>
</div>
