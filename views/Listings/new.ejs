<%layout("Layouts/boilerplate")%>
<h3 class="listing-heading">Add New Listing</h3>
<div class="row">
  <div class="col-8 offset-2">
    <form action="/listings" method="POST" novalidate class="needs-validation">
      <div class="input-div">
        <label for="title" class="form-label">Title</label>
        <input
          name="listings[title]"
          type="text"
          placeholder="enter a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">correct title</div>
        <div class="invalid-feedback">enter correct title</div>
      </div>

      <div class="input-div">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listings[description]"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">correct description</div>
        <div class="invalid-feedback">enter correct description</div>
      </div>

      <div class="input-div">
        <label for="image" class="form-label">Image Link</label>
        <input
          type="url"
          name="listings[image]"
          placeholder="Enter image url / link"
          class="form-control"
        />
        <div class="valid-feedback">correct image url</div>
      </div>

      <div class="row">
        <div class="col-md-4 input-div">
          <label for="price" class="form-label">Price</label>
          <input
            
            name="listings[price]"
            placeholder="eg: 1200"
            class="form-control"
            required
          />
          <div class="valid-feedback">correct price</div>
          <div class="invalid-feedback">enter correct price</div>
        </div>

        <div class="col-md-8 input-div">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            placeholder="enter country"
            class="form-control"
            required
          />
          <div class="valid-feedback">correct country</div>
          <div class="invalid-feedback">enter correct country name</div>
        </div>
      </div>

      <div class="input-div">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listings[location]"
          placeholder="enter location"
          class="form-control"
          required
        />
        <div class="valid-feedback">correct location</div>
        <div class="invalid-feedback">enter correct location</div>
      </div>

      <button class="btn btn-danger">Add</button>
    </form>
  </div>
</div>
